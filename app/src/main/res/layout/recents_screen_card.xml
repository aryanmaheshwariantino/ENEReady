<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:id="@+id/firstlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/openvalleytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Valley EV Station"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#171725"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/availabletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="12sp"
                android:textColor="#22C965"
                android:gravity="start"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/firstlinearlayout">

            <TextView
                android:id="@+id/singaporetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emery Point, Pacocha Motorway,\nSingapore"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_marginStart="18dp"
                android:gravity="start"
                android:textColor="#696974"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/thirdlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/secondlinearlayout">

            <ImageView
                android:id="@+id/starticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_1"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4.0"

                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textColor="#696974"/>

            <ImageView
                android:id="@+id/standicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:src="@drawable/line_8"/>
            <ImageView
                android:id="@+id/gasstationid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:src="@drawable/gas_station"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textColor="#696974"/>

            <ImageView
                android:id="@+id/standicon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:src="@drawable/line_8"/>
            <ImageView
                android:id="@+id/routingicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:src="@drawable/routing"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textColor="#696974"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fourthLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@id/thirdlinearlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                android:textSize="8dp"
                android:textColor="#92929D"
                android:text="Last used on 12th Jan 05:00PM"/>

            <View
                android:layout_width="250dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="18dp"
                android:layout_height="1dp"
                android:background="#F1F1F5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="86dp"
                    android:layout_height="37dp"
                    android:text="Reserve"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"
                    android:backgroundTint="#2E445C"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:textColor="#2E445C"
                    android:layout_marginStart="100dp"
                    android:text="View Details"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_4307"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

